<h1>Update Pet</h1>
<% binding.pry %>
<form action="/pets/<%= @pet.id %>" method="POST">
  <label>Name:</label>

  <br></br>
<% binding.pry %>
  <input type="text" name="pet[name]" id="pet_name" value="<%= @pet.name %>">

  <br></br>

  <label>Choose an existing owner:</label>

  <br></br>
<% binding.pry %>
  <% @owners.each do |owner|%>
    <input type="checkbox" name="pet[owner_id]" id="<%=owner.id%>" value="<%=owner.id%>" <%= 'checked' if @pet.owner_id == owner.id %>><%= owner.name %></input>
  <%end%>

  <br></br>
<% binding.pry %>
    <label>and/or, create a new owner:</label>
    <br></br>
    <label>name:</label>
      <input type="text" name="owner_name" id="owner_name"></input>
    <br></br>
  <input type="submit" value="Create Pet">
</form>
